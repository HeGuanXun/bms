<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.szhn.hegx.bms.dao.BookDao">
  <resultMap id="BaseResultMap" type="com.szhn.hegx.bms.modle.Book" >
    <result column="bid" property="bid"/>
    <result column="bookName" property="bookName"/>
    <result column="author" property="author"/>
    <result column="type" property="type"/>
    <result column="publisher" property="publisher"/>
    <result column="publicationDate" property="publicationDate"/>
    <result column="price" property="price"/>
    <result column="status" property="status"/>
    <result column="remark" property="remark"/>
  </resultMap>

  <sql id="Base_Column_List" >
    bid, bookName, author, type, publisher, publicationDate, price, status, remark
  </sql>
  <sql id="Base_Column_List_condition" >
    <if test="bid != null" >
      and bid = #{bid}
    </if>
    <if test="bookName != null" >
      and bookName = #{bookName}
    </if>
    <if test="author != null" >
      and author = #{author}
    </if>
    <if test="type != null" >
      and type = #{type}
    </if>
    <if test="publisher != null" >
      and publisher = #{publisher}
    </if>
    <if test="publicationDate != null" >
      and publicationDate = #{publicationDate}
    </if>
    <if test="price != null" >
      and price = #{price}
    </if>
    <if test="remark != null" >
      and remark = #{remark}
    </if>
  </sql>
  <select id="getBook" resultMap="BaseResultMap" parameterType="com.szhn.hegx.bms.modle.Book" >
    select 
    <include refid="Base_Column_List" />
    from book
    where 1 = 1
    <include refid="Base_Column_List_condition" />
  </select>

  <delete id="deleteById" parameterType="java.lang.Integer" >
    delete from book
    where bid = #{bid}
  </delete>

</mapper>